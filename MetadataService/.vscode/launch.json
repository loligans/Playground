    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Metadata Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Metadata.Api/bin/Debug/netcoreapp3.1/Metadata.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Metadata.Api",
            "stopAtEntry": false,
            // Uncomment to open in browser
            // "serverReadyAction": {
            //     "action": "openExternally",
            //     "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            // },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "logging": {
                "threadExit": false,
                "moduleLoad": false
            }
        },
        {
            "name": "Launch Metadata Client Demo",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Metadata.Client/bin/Debug/netcoreapp3.1/Metadata.Client.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Metadata.Client",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}
