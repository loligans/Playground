   "version": "0.2.0",
   "compounds": [
       {
           "name": "Identity/Metadata",
           "configurations": [
               "Launch Identity Server 4",
               "Launch Metadata Service"
           ]
       }
   ],
   "configurations": [
        {
            "name": "Launch Identity Server 4",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/IdentityServerDemo/IdentityServerHost/bin/Debug/netcoreapp3.1/IdentityServerHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/IdentityServerDemo/IdentityServerHost",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "logging": {
                "threadExit": false,
                "moduleLoad": false
            }
        },
        {
            "name": "Launch Metadata Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/MetadataService/Metadata.Api/bin/Debug/netcoreapp3.1/Metadata.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/MetadataService/Metadata.Api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "logging": {
                "threadExit": false,
                "moduleLoad": false
            }
        },
        {
            "name": "Launch Storage Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/StorageService/Storage.Api/bin/Debug/netcoreapp3.1/Storage.Api.dll",
            "args": [],
