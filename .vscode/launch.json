            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "logging": {
                "threadExit": false,
                "moduleLoad": false
            }
        },
        {
            "name": "Launch Identity Client Demo",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/IdentityServerDemo/IdentityServerClient/bin/Debug/netcoreapp3.1/IdentityServerClient.dll",
            "args": [],
            "cwd": "${workspaceFolder}/IdentityServerDemo",
